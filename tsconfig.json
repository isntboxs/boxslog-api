{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist"
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.cjs", "**/*.js", "**/*.mjs"],
  "exclude": ["node_modules"]
}
